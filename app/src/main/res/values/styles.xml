<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="munu_button_style">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="item_button_style">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="main_tv_style">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_normal</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="hintAppearence" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


</resources>
