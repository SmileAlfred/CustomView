<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.customview.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_weight="1"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="#fff"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/youku_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="50dp"
                        android:text="自定义 优酷菜单" />

                    <Button
                        android:id="@+id/viewpager_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="50dp"
                        android:text="自定义 广告条" />

                    <Button
                        android:id="@+id/popup_windows_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="50dp"
                        android:text="自定义 下拉框" />

                    <Button
                        android:id="@+id/toggle_button_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="50dp"
                        android:text="自定义 开关按钮" />

                    <Button
                        android:id="@+id/auto_attribute_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="50dp"
                        android:text="自定义 属性" />

                    <Button
                        android:id="@+id/my_view_pager_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="50dp"
                        android:text="自定义 仿ViewPager" />

                    <Button
                        android:id="@+id/quick_index_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="50dp"
                        android:text="自定义 联系人快速索引" />

                    <Button
                        android:id="@+id/slide_menu_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="50dp"
                        android:text="自定义 侧滑菜单" />

                    <Button
                        android:id="@+id/wave_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="50dp"
                        android:text="自定义 水波纹" />


                </LinearLayout>

            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:background="#fff"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="#fff"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <Button
                        android:id="@+id/property_animation_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="50dp"
                        android:text="测试 属性动画" />

                    <Button
                        android:id="@+id/scrollby_test_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="50dp"
                        android:text="测试 ScrollBy" />

                    <Button
                        android:id="@+id/touch_event_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="50dp"
                        android:text="测试 拦截触摸事件" />

                    <Button
                        android:id="@+id/dispatch_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="50dp"
                        android:text="案例 事件分发" />
                  <Button
                        android:id="@+id/wave_full_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="50dp"
                        android:text="案例 水波纹完整版" />
                <Button
                        android:id="@+id/hk_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="50dp"
                        android:text="案例 HK" />
                </LinearLayout>

            </ScrollView>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>