            <TextView
                android:id="@+id/tv_menu_item"
                style="@style/main_tv_style"
                android:text="散花菜单" />

            <TextView
                android:id="@+id/tv_dy_loading_item"
                style="@style/main_tv_style"
                android:text="抖音加载" />

            <TextView
                android:id="@+id/tv_gesture_track_item"
                style="@style/main_tv_style"
                android:text="手写板" />

            <TextView
                android:id="@+id/tv_wave_anim_item"
                style="@style/main_tv_style"
                android:text="波浪动画" />

            <TextView
                android:id="@+id/tv_float_windows_item"
                style="@style/main_tv_style"
                android:text="悬浮窗" />

            <TextView
                android:id="@+id/tv_color_matrix_item"
                style="@style/main_tv_style"
                android:text="色彩变换" />

            <TextView
                android:id="@+id/tv_telescope_item"
                style="@style/main_tv_style"
                android:text="望远镜" />

