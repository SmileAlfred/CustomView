                style="@style/main_tv_style"
                android:text="下拉框" />

            <TextView
                android:id="@+id/toggle_button_item"
                style="@style/main_tv_style"
                android:text="开关按钮" />

            <TextView
                android:id="@+id/auto_attribute_item"
                style="@style/main_tv_style"
                android:text="自定义属性" />

            <TextView
                android:id="@+id/my_view_pager_item"
                style="@style/main_tv_style"
                android:text="仿ViewPager" />

            <TextView
                android:id="@+id/quick_index_item"
                style="@style/main_tv_style"
                android:text="联系人快速索引" />

            <TextView
                android:id="@+id/slide_menu_item"
                style="@style/main_tv_style"
                android:text="侧滑菜单" />

            <TextView
                android:id="@+id/wave_item"
                style="@style/main_tv_style"
                android:text="水波纹" />


            <TextView
                android:id="@+id/property_animation_item"
                style="@style/main_tv_style"
                android:text="属性动画Test" />

            <TextView
                android:id="@+id/scrollby_test_item"
                style="@style/main_tv_style"
                android:text="ScrollByTest" />

            <TextView
                android:id="@+id/touch_event_item"
                style="@style/main_tv_style"
                android:text="拦截触摸事件Test" />

            <TextView
                android:id="@+id/dispatch_item"
                style="@style/main_tv_style"
                android:text="事件分发Test" />

            <TextView
                android:id="@+id/wave_full_item"
                style="@style/main_tv_style"
                android:text="水波纹完整版" />

            <TextView
