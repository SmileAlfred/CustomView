<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.customview.TitleLayout
        android:id="@+id/title_popup_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edit_text_popup_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_popup_item"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:ellipsize="end"
        android:hint="请输入内容..."
        android:paddingLeft="4dp"
        android:singleLine="true" />


    <ImageView
        android:id="@+id/down_arrow_image_view_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_popup_item"
        android:layout_alignRight="@+id/edit_text_popup_item"
        android:padding="5dp"
        android:src="@drawable/down_arrow_popup_item" />

</RelativeLayout>